# AI News Radar — Environment Variables
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control.

# Apify (Twitter scraping)
APIFY_TOKEN=your_apify_token_here
APIFY_GLOBAL_LIST_ID=your_global_list_id
APIFY_CHINA_LIST_ID=your_china_list_id

# LLM API Keys (fallback chain: Anthropic → DashScope → DeepSeek)
ANTHROPIC_API_KEY=your_anthropic_api_key
DASHSCOPE_API_KEY=your_dashscope_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key

# DingTalk Webhook (report push)
DINGTALK_GLOBAL_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=your_token
DINGTALK_CHINA_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=your_token
